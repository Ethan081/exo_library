{% extends "base.html.twig" %}
{% block title %}Show Auteur{% endblock %}
    {% block content %}
        <main>
            <section class="section">
                <div class="card">
                    <h1>Nom : {{ author.lastName }}</h1>
                    <h2>Prenom : {{ author.firstName }}</h2>
                    <h3>Date de Naissance : {{ author.birthdate|date('d-m-Y') }}</h3>
                    <p>Biographie :<br>{{ author.bio }}</p>
                </div>
            </section>
        </main>
    {% endblock %}
